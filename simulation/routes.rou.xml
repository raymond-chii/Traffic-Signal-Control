<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Define vehicle types -->
    <vType id="car" vClass="passenger" color="1,0,0"/>
    <vType id="bike" vClass="bicycle" color="0,1,0"/>
    <vType id="ped_pedestrian" vClass="pedestrian" color="0,0,1"/>
    
    <!-- ROUTES -->
    <route id="north_south" edges="north_far_to_near north_near_to_center center_to_south"/>
    <route id="north_west" edges="north_far_to_near north_near_to_center center_to_west"/>
    <route id="north_east" edges="north_far_to_near north_near_to_center center_to_east"/>
    
    <route id="south_north" edges="south_far_to_near south_near_to_center center_to_north"/>
    <route id="south_west" edges="south_far_to_near south_near_to_center center_to_west"/>
    <route id="south_east" edges="south_far_to_near south_near_to_center center_to_east"/>
    
    <route id="west_north" edges="west_far_to_near west_near_to_center center_to_north"/>
    <route id="west_south" edges="west_far_to_near west_near_to_center center_to_south"/>
    <route id="west_east" edges="west_far_to_near west_near_to_center center_to_east"/>
    
    <route id="east_north" edges="east_far_to_near east_near_to_center center_to_north"/>
    <route id="east_south" edges="east_far_to_near east_near_to_center center_to_south"/>
    <route id="east_west" edges="east_far_to_near east_near_to_center center_to_west"/>
    
    
    <!-- North-South Total: ~533 vehicles -->
    <flow id="flow_N_S" type="car" route="north_south" begin="0" end="3600" number="200" departSpeed="max"/>
    <flow id="flow_N_W" type="car" route="north_west" begin="0" end="3600" number="50" departSpeed="max"/>
    <flow id="flow_N_E" type="car" route="north_east" begin="0" end="3600" number="50" departSpeed="max"/>

    <flow id="flow_S_N" type="car" route="south_north" begin="0" end="3600" number="180" departSpeed="max"/>
    <flow id="flow_S_W" type="car" route="south_west" begin="0" end="3600" number="30" departSpeed="max"/>
    <flow id="flow_S_E" type="car" route="south_east" begin="0" end="3600" number="23" departSpeed="max"/>

    <!-- East-West Total: ~533 vehicles -->
    <flow id="flow_W_N" type="car" route="west_north" begin="0" end="3600" number="50" departSpeed="max"/>
    <flow id="flow_W_S" type="car" route="west_south" begin="0" end="3600" number="50" departSpeed="max"/>
    <flow id="flow_W_E" type="car" route="west_east" begin="0" end="3600" number="200" departSpeed="max"/>

    <flow id="flow_E_N" type="car" route="east_north" begin="0" end="3600" number="30" departSpeed="max"/>
    <flow id="flow_E_S" type="car" route="east_south" begin="0" end="3600" number="23" departSpeed="max"/>
    <flow id="flow_E_W" type="car" route="east_west" begin="0" end="3600" number="180" departSpeed="max"/>
    
    <!-- <flow id="bike_N_S" type="bike" route="north_south" begin="0" end="3600" number="10" departSpeed="max"/> -->
    <!-- <flow id="bike_S_N" type="bike" route="south_north" begin="0" end="3600" number="10" departSpeed="max"/> -->

    <!-- PEDESTRIAN TYPES with jaywalking behavior -->
    <vType id="ped_normal" vClass="pedestrian" color="0,0,1" width="0.65" length="0.5" jmDriveAfterRedTime="5" jmCrossingGap="5"/>
    <vType id="ped_jaywalker" vClass="pedestrian" color="1,0,0" width="0.65" length="0.5" jmDriveAfterRedTime="0" jmCrossingGap="1" jmIgnoreFoeProb="0.5" jmIgnoreFoeSpeed="5"/>

    <!-- PEDESTRIAN FLOWS -->
    <!-- North-South crossings (70% normal, 30% jaywalkers) -->
    <personFlow id="ped_N_cross" type="ped_normal" begin="0" end="3600" personsPerHour="40">
        <walk edges="north_near_to_center center_to_south"/>
    </personFlow>
    <personFlow id="ped_N_jaywalk" type="ped_jaywalker" begin="0" end="3600" personsPerHour="17">
        <walk edges="north_near_to_center center_to_south"/>
    </personFlow>

    <personFlow id="ped_S_cross" type="ped_normal" begin="0" end="3600" personsPerHour="40">
        <walk edges="south_near_to_center center_to_north"/>
    </personFlow>
    <personFlow id="ped_S_jaywalk" type="ped_jaywalker" begin="0" end="3600" personsPerHour="17">
        <walk edges="south_near_to_center center_to_north"/>
    </personFlow>

    <!-- East-West crossings (70% normal, 30% jaywalkers) -->
    <personFlow id="ped_E_cross" type="ped_normal" begin="0" end="3600" personsPerHour="25">
        <walk edges="east_near_to_center center_to_west"/>
    </personFlow>
    <personFlow id="ped_E_jaywalk" type="ped_jaywalker" begin="0" end="3600" personsPerHour="11">
        <walk edges="east_near_to_center center_to_west"/>
    </personFlow>

    <personFlow id="ped_W_cross" type="ped_normal" begin="0" end="3600" personsPerHour="25">
        <walk edges="west_near_to_center center_to_east"/>
    </personFlow>
    <personFlow id="ped_W_jaywalk" type="ped_jaywalker" begin="0" end="3600" personsPerHour="11">
        <walk edges="west_near_to_center center_to_east"/>
    </personFlow>

</routes>